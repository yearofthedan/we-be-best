{
  "name": "realtime-server",
  "version": "1.0.0",
  "description": "Provides real time communication between the clients",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn run build && yarn run serve",
    "serve": "node dist/index.js",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "build-ts": "tsc",
    "build": "yarn run build-ts && cp src/schema.graphql dist/schema.graphql",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\""
  },
  "dependencies": {
    "apollo-datasource-mongodb": "^0.2.6",
    "apollo-server-express": "^2.14.4",
    "express": "^4.17.1",
    "graphql": "^15.1.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^6.0.10",
    "mongodb-memory-server": "^6.6.1"
  },
  "devDependencies": {
    "@types/concurrently": "^5.2.1",
    "@types/eslint": "^7.2.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-ws": "^1.0.20",
    "apollo-server-testing": "^2.14.4",
    "concurrently": "^5.2.0",
    "eslint": "^7.2.0",
    "jest": "^26.0.1",
    "jest-transform-graphql": "^2.1.0",
    "nodemon": "^2.0.4",
    "subscriptions-transport-ws": "^0.9.16",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5",
    "uuid": "^8.1.0",
    "ws": "^7.3.0"
  }
}
