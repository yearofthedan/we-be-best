{
  "name": "realtime-server",
  "version": "1.0.0",
  "description": "Provides real time communication between the clients",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node dist/index.js",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "build-ts": "tsc",
    "build": "npm run lint && npm run build-ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@types/concurrently": "^5.1.0",
    "@types/eslint": "^6.8.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.0",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  }
}
